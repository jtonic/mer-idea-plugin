<idea-plugin>
    <id>ro.jtonic.bundles.plugin</id>
    <name>M support</name>
    <version>0.1.0</version>
    <vendor email="antonel.pazargic@gmail.com" url="http://www.example.com">I Tech</vendor>
    <description>Run configurations, templates, actions and intentions for Mer framework.</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.plugins.gradle</depends>
    <!--<depends>org.jetbrains.kotlin</depends>-->

    <actions>
        <group id="Mer.Settings" text="Mer settings" popup="true">
            <separator/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action class="ro.jtonic.handson.plugin.action.MerAction" id="MerAction"
                    text="Mer...">

<!--
                further examples about the key shortcuts
                https://www.jetbrains.org/intellij/sdk/docs/basics/action_system.html
-->
                <!--<keyboard-shortcut first-keystroke="control alt shift 1" second-keystroke="M" keymap="$default"/>-->
                <keyboard-shortcut first-keystroke="control alt M" keymap="$default"/>
            </action>
            <action id="AddMvnRepoAction" class="ro.jtonic.handson.plugin.action.AddMvnRepoAction"
                    text="Add maven repository"/>
        </group>
    </actions>
</idea-plugin>
